<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sjsu.hanumesh.restaurantfinder.SingleBusinessActivity">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="122dp"
        android:layout_height="252dp"
        android:layout_alignTop="@+id/ratingText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/snippet">
    </ImageView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/white"
        android:layout_toStartOf="@+id/white">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rating:  "
        android:id="@+id/ratingText"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/rating"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/ratingText"
        android:layout_toEndOf="@+id/ratingText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="No of Reviews:  "
        android:id="@+id/countText"
        android:layout_below="@+id/ratingText"
        android:layout_alignLeft="@+id/ratingText"
        android:layout_alignStart="@+id/ratingText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/no_of_reviews"
        android:layout_alignTop="@+id/countText"
        android:layout_toRightOf="@+id/countText"
        android:layout_toEndOf="@+id/countText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contact:  "
        android:id="@+id/phoneText"
        android:layout_below="@+id/countText"
        android:layout_alignLeft="@+id/countText"
        android:layout_alignStart="@+id/countText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/phone"
        android:layout_alignTop="@+id/phoneText"
        android:layout_toRightOf="@+id/phoneText"
        android:layout_toEndOf="@+id/phoneText"
        android:autoLink="phone"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/map"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/snippet"
        android:layout_below="@+id/phoneText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/white"
        android:layout_alignEnd="@+id/white" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/white"
        android:soundEffectsEnabled="false"
        android:src="@drawable/iwhite"
        android:background="#00fefefe"
        android:layout_above="@+id/no_of_reviews"
        android:layout_alignRight="@+id/map"
        android:layout_alignEnd="@+id/map" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location:  "
        android:id="@+id/textView"
        android:layout_below="@+id/snippet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/location"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />
</RelativeLayout>
